<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" tools:context=".GuardianSettingsActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" android:text="Guardian Settings"
        android:textColor="@color/text_primary"
        android:textAppearance="@style/TextAppearance.App.Headline5" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="Enter the phone number of your guardian who will be contacted in case of emergency."
        android:textColor="@color/text_secondary"
        android:textAppearance="@style/TextAppearance.App.Body1" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/guardianNumberInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:hint="Phone Number (e.g., +1234567890)"
        android:textColorHint="@color/text_tertiary"
        app:boxStrokeColor="@color/secondary_color" app:hintTextColor="@color/secondary_color" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructionTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/guardianNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="phone"
            android:background="@drawable/rounded_border"
            android:backgroundTint="#374151"
            android:text="+91-XXXXXXXXXX"
            android:textColor="@color/text_secondary"
            android:padding="12dp"
            android:textAppearance="@style/TextAppearance.App.Body1" /> </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveButton"
        style="@style/PrimaryButton" android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:text="Save"
        android:background="@drawable/rounded_border"
        android:backgroundTint="#14b8a6"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guardianNumberInputLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>